{
  "name": "cs-club-hackathon-platform",
  "version": "1.0.0",
  "description": "GVHS CS Club Hackathon Platform - ICPC-style contest management system",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && GENERATE_SOURCEMAP=false npm start",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "start.bat",
    "start:unix": "./start.sh",
    "start:npm": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && NODE_ENV=development npm start",
    "start:frontend": "cd frontend && GENERATE_SOURCEMAP=false npm start",
    "stop": "stop.bat",
    "stop:unix": "./stop.sh",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test -- --watchAll=false",
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:rollback": "cd backend && npm run db:rollback",
    "db:seed": "cd backend && npm run db:seed",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && rm -rf node_modules build",
    "clean:frontend": "cd frontend && rm -rf node_modules build"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/cs-club-hackathon-platform.git"
  },
  "keywords": [
    "hackathon",
    "contest",
    "icpc",
    "programming",
    "competition",
    "education"
  ],
  "author": "GVHS CS Club",
  "license": "MIT"
}