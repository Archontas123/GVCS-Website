# CS Club Hackathon Platform - Production Environment Template
# Copy this file to .env and fill in your production values

# ==============================================
# CRITICAL: CHANGE THESE VALUES!
# ==============================================

# Generate secrets with: openssl rand -hex 64
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET
SESSION_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET

# Strong passwords
ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Your domain
DOMAIN=yourdomain.com
REACT_APP_API_URL=https://yourdomain.com/api
REACT_APP_WS_URL=wss://yourdomain.com

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
PORT=3000
FRONTEND_PORT=80
BACKEND_PORT=3000

# JWT Configuration
JWT_EXPIRES_IN=24h

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_NAME=hackathon_db
POSTGRES_DB=hackathon_db
POSTGRES_USER=hackathon_user

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379

# ==============================================
# CODE EXECUTION SETTINGS
# ==============================================
ENABLE_CODE_EXECUTION=true
EXECUTION_TIMEOUT=10
MEMORY_LIMIT=256
CPU_LIMIT=1.0

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
LOG_FILE=./logs/combined.log
ERROR_LOG_FILE=./logs/error.log

# ==============================================
# CONTEST SETTINGS (Optional - customize as needed)
# ==============================================
DEFAULT_CONTEST_DURATION=180
DEFAULT_FREEZE_TIME=60
MAX_TEAMS=100
MAX_SUBMISSIONS_PER_MINUTE=10

# ==============================================
# FEATURES
# ==============================================
ENABLE_REAL_TIME_UPDATES=true
ENABLE_LEADERBOARD_FREEZE=true
ENABLE_TEAM_REGISTRATION=true
ENABLE_ADMIN_PANEL=true

# ==============================================
# TIMEZONE
# ==============================================
TZ=UTC
