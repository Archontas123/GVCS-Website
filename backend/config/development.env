# Development Environment Configuration
# CS Club Hackathon Platform - Phase 6.2

NODE_ENV=development
PORT=3000
FRONTEND_PORT=3001

# Security - Development keys (not for production)
JWT_SECRET=development-jwt-secret-key-not-for-production
ADMIN_PASSWORD=admin123
SESSION_SECRET=development-session-secret

# Database - Use SQLite for development
DB_TYPE=sqlite
SQLITE_PATH=./src/database/contest.db

# Redis - Optional for development
REDIS_URL=redis://localhost:6379

# Contest Settings
CONTEST_DURATION=60
MAX_TEAMS=20
MAX_SUBMISSIONS_PER_MINUTE=30

# Code Execution
ENABLE_CODE_EXECUTION=true
EXECUTION_TIMEOUT=15
MEMORY_LIMIT=512

# Monitoring
ENABLE_METRICS=false
LOG_LEVEL=debug

# Performance - Lower for development
UV_THREADPOOL_SIZE=2
NODE_OPTIONS=--max-old-space-size=512

# Features - All enabled for testing
ENABLE_REAL_TIME_UPDATES=true
ENABLE_LEADERBOARD_FREEZE=true
ENABLE_BALLOON_NOTIFICATIONS=true

# Backups - Disabled for development
ENABLE_BACKUPS=false

# Development specific
ENABLE_CORS=true
DEBUG=true
WATCH_FILES=true