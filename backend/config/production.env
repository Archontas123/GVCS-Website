# Production Environment Configuration
# CS Club Hackathon Platform - Phase 6.2

NODE_ENV=production
PORT=3000
FRONTEND_PORT=80

# Security - These should be overridden with actual secrets
JWT_SECRET=REPLACE_WITH_ACTUAL_SECRET
ADMIN_PASSWORD=REPLACE_WITH_ACTUAL_PASSWORD
SESSION_SECRET=REPLACE_WITH_ACTUAL_SECRET

# Database - PostgreSQL
DB_TYPE=postgresql
DB_HOST=postgres
DB_PORT=5432
DB_NAME=hackathon_db
DB_USER=hackathon_user
DB_PASSWORD=REPLACE_WITH_ACTUAL_PASSWORD
DATABASE_URL=postgresql://hackathon_user:REPLACE_WITH_ACTUAL_PASSWORD@postgres:5432/hackathon_db
POSTGRES_DB=hackathon_db
POSTGRES_USER=hackathon_user
POSTGRES_PASSWORD=REPLACE_WITH_ACTUAL_PASSWORD

# Redis
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# Contest Settings
CONTEST_DURATION=240
MAX_TEAMS=100
MAX_SUBMISSIONS_PER_MINUTE=15

# Code Execution
ENABLE_CODE_EXECUTION=true
EXECUTION_TIMEOUT=10
MEMORY_LIMIT=256

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=warn

# Performance
UV_THREADPOOL_SIZE=4
NODE_OPTIONS=--max-old-space-size=2048

# Features
ENABLE_REAL_TIME_UPDATES=true
ENABLE_LEADERBOARD_FREEZE=true
ENABLE_BALLOON_NOTIFICATIONS=true

# Backups
ENABLE_BACKUPS=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=30